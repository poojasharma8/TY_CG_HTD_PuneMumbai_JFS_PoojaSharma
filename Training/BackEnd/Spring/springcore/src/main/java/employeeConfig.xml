<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->

	<bean id="employee"
		class="com.capgemini.springcore.beans.EmployeeBean" autowire="byType">
		<property name="empId" value="101" />
		<property name="empName" value="Pooja" />
	</bean>


	<bean id="dev" class="com.capgemini.springcore.beans.DepartmentBean" autowire-candidate ="false">
	<property name="deptId" value="9012"/>
	<property name="deptName" value="Dev"/>
	</bean>

	<bean id="test" class="com.capgemini.springcore.beans.DepartmentBean" autowire-candidate ="false">
	<property name="deptId" value="902"/>
	<property name="deptName" value="Testing"/>
	</bean>
	
	<bean id="hr" class="com.capgemini.springcore.beans.DepartmentBean">
	<property name="deptId" value="903"/>
	<property name="deptName" value="HR"/>
	</bean>
</beans>	